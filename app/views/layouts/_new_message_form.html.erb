<%= form_with(model: [@single_room, @message], remote: true,
    data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f| %>
    <div class="input-group mb-3">
        <%= f.text_field :body, id: 'chat-text', 
            class: 'form-control', 
            placeholder: "Message",
            'aria-label': "Message",
            'aria-describedby': "button-addon3",
            autocomplete: 'off'
        %>
        <%= f.submit "Post", data: {disable_with:false}, class: 'btn btn-primary', id: "button-addon3" %>
    </div>
<% end %>
