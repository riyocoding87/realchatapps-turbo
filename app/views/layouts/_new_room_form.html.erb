<%= form_with(model: @room, remote: true, class: 'd-flex',
 data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f| %>
    
    <div class="input-group mb-3">
    <%= f.text_field :name,
    class: 'form-control', 
    autocomplete: 'off',
    placeholder: "Create Room",
    'aria-label': "Room",
    'aria-describedby': "button-room" 
    %>
    <%= f.submit "Create", data: {disable_with:false}, class: 'btn btn-primary', id: "button-room" %>
    </div>
<% end %>